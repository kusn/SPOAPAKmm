<Window x:Class="TestClientWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestClientWpfApp"
        xmlns:viewModels="clr-namespace:TestClientWpfApp.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel>
        <TextBox Text="{Binding SendMessage}"/>
        <Button Content="Отправить" Command="{Binding Send}"/>
        <TextBlock Text="{Binding RecieveMessage, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</Window>
